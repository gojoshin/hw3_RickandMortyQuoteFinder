<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rick and Morty</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</head>

<body>

  <h1 class="text-center bg-black text-white p-4 m-0">Rick and Morty Locations</h1>
    <%- include("partials/navbar.ejs") %>

  <div class="container my-4">
    <form action="/location" method="GET" class="text-center mb-4">
      <label for="count" class="form-label">How many locations? (1â€“10)</label>
      <input type="number" id="count" name="count" min="1" max="10" class="form-control w-25 mx-auto mb-3" required>
      <button type="submit" class="btn btn-primary">Show</button>
    </form>

    <% if (locations && locations.length) { %>
      <% locations.forEach(loc => { %>
        <div class="card shadow mb-3 text-start">
          <div class="card-body">
            <h5 class="card-title"><%= loc.name %></h5>
            <p><strong>Type:</strong> <%= loc.type %></p>
            <p><strong>Dimension:</strong> <%= loc.dimension %></p>
            <p><strong>Residents:</strong> <%= loc.residents.length %></p>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
    <%- include("partials/footer.ejs") %>
</body>

</html>